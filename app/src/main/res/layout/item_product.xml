<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Chuối tây"
        android:textColor="#2196F3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageProduct"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceProduct"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="50.000 đ"
        android:textColor="#F44336"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/nameProduct"
        app:layout_constraintStart_toStartOf="@+id/nameProduct"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct" />

    <TextView
        android:id="@+id/desProduct"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Mô tả"
        app:layout_constraintEnd_toEndOf="@+id/priceProduct"
        app:layout_constraintStart_toStartOf="@+id/priceProduct"
        app:layout_constraintTop_toBottomOf="@+id/priceProduct" />
</androidx.constraintlayout.widget.ConstraintLayout>